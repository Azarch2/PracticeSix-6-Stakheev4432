<Window x:Class="DetailsForMachines.AcceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailsForMachines"
        mc:Ignorable="d"
        Title="Принятие решения" ResizeMode="NoResize" Style="{StaticResource Window}" Closing="Close" Height="200" Width="200" WindowStartupLocation="CenterScreen" Background="#0D9F9F">
    <Grid>
        <Button Click="YesClick" Name="YesButton" VerticalAlignment="Top" Margin="20" Height="50" Content="Да" Style="{StaticResource button}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="35" />
                </Style>
            </Button.Resources>
        </Button>
        <Button Click="NoClick" Name="NoButton" Margin="20" VerticalAlignment="Bottom" Height="50" Content="Нет" Style="{StaticResource button}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="35" />
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock Height="40" HorizontalAlignment="Center" Style="{StaticResource TextBig}" Text="Удалить?"></TextBlock>
    </Grid>
</Window>
